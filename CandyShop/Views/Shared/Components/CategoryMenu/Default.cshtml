@model IEnumerable<CandyShop.Domain.Models.Category>
@using System.Text.Encodings.Web

<li class="dropdown">
    <a class="dropdown-toggle" data-toggle="dropdown">Categories<b class="caret"></b></a>
    <ul class="dropdown-menu">
        @foreach (var category in Model)
        {
            <li>
                <a asp-controller="Candy" asp-action="List" asp-route-category="@category.CategoryName">@HtmlEncoder.Default.Encode(category.CategoryName)</a>
            </li>
        }
        <li class="divider"></li>
        <li>
            <a asp-controller="Candy" asp-action="List" asp-route-category="">View All Candy</a>
        </li>
    </ul>
</li>
