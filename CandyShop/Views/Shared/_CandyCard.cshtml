@model CandyShop.Domain.Models.Candy
@using System.Text.Encodings.Web

<div class="col-sm-4 col-lg-4 col-md-4">
    <div class="thumbnail">
        <img src="@HtmlEncoder.Default.Encode(Model.ImageThumbnailUrl)" alt="image for candy shop" />
        <div class="caption">
            <h3 class="pull-right">@HtmlEncoder.Default.Encode(Model.Price.ToString("C"))</h3>
            <h3><a asp-controller="Candy" asp-action="Details" asp-route-id="@Model.CandyId">@HtmlEncoder.Default.Encode(Model.Name)</a></h3>
            <p>@HtmlEncoder.Default.Encode(Model.Description)</p>
        </div>
        <div class="addToCart">
            <p class="button">
                <a class="btn btn-primary" asp-controller="Shoppingcart" asp-action="AddToShoppingCart"
                   asp-route-candyId="@Model.CandyId">Add to Cart</a>
            </p>
        </div>
    </div>
</div>
